{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    // normally this should be a key of "lib" but that doesn't work with Bun
    // types.
    "types": ["webworker", "ES2020", "ES2021", "DOM", "DOM.Iterable"],

    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "./temp/sw",
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/**/*.js", "src/sw/js/lib/db.min.js"],
  "exclude": [
    "node_modules", "src/**/*spec.ts"
  ]
}
